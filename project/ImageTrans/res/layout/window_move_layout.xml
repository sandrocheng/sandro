<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <com.sandro.layout.MoveLinearLayout
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent"
		android:orientation="horizontal" 
		android:background="#11000011" 
		android:id="@+id/LinearLayout_main">
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   					  android:layout_width="fill_parent"
    			      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:background="@drawable/one" 
                      android:id="@+id/sub_view_1">
             <TextView 
				android:id="@+id/tips_bar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="sub_view1"
				android:textColor="#ff9900"
				android:gravity="center_horizontal|center_vertical"/>          
        </LinearLayout>
         
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   					  android:layout_width="fill_parent"
    			      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:background="@drawable/two" 
                      android:id="@+id/sub_view_2">
			<TextView 
				android:id="@+id/tips_bar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="sub_view2"
				android:textColor="#ff9900"
				android:gravity="center_horizontal|center_vertical"/> 
        </LinearLayout>
        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   					  android:layout_width="fill_parent"
    			      android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:background="@drawable/three"  
                      android:id="@+id/sub_view_3">
			<TextView 
				android:id="@+id/tips_bar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="sub_view3"
				android:textColor="#ff9900"
				android:gravity="center_horizontal|center_vertical"/>                      
        </LinearLayout>        
		 
	</com.sandro.layout.MoveLinearLayout>
</LinearLayout>
