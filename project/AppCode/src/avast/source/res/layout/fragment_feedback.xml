<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" style="@style/ScrollView.Transparent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:avast="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@id/titlebar" android:background="@drawable/bg_title" android:layout_width="fill_parent" android:layout_height="@dimen/titlebar_height">
            <android.support.v4.app.FragmentBreadCrumbs android:layout_gravity="center_vertical" android:id="@id/breadcrumbs" android:tag="breadcrumbs" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_marginHorizontal" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/bg_menu_normal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/feedback_email_label" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/content_marginVertical" android:text="@string/l_feedback_email" style="?rowTitleStyle" />
            <TextView android:textStyle="bold" android:textColor="@color/text_problem" android:id="@id/feedback_email_error_message" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_marginHorizontal" android:layout_marginTop="@dimen/content_marginVerticalSmall" android:layout_marginRight="@dimen/content_marginHorizontal" android:layout_marginBottom="@dimen/content_marginVerticalSmall" android:text="@string/msg_feedback_email_not_valid" />
            <EditText android:id="@id/feedback_email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_marginHorizontal" android:layout_marginTop="@dimen/content_marginVerticalSmall" android:layout_marginRight="@dimen/content_marginHorizontal" android:layout_marginBottom="@dimen/content_marginVertical" android:hint="@string/l_feedback_email_hint" android:maxLines="1" android:inputType="textEmailAddress" />
            <include layout="@layout/row_line_separator" />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/content_marginVertical" android:text="@string/l_feedback_name" style="?rowTitleStyle" />
            <EditText android:id="@id/feedback_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_marginHorizontal" android:layout_marginTop="@dimen/content_marginVerticalSmall" android:layout_marginRight="@dimen/content_marginHorizontal" android:layout_marginBottom="@dimen/content_marginVertical" android:hint="@string/l_feedback_name_hint" android:maxLines="1" android:inputType="text" />
            <include layout="@layout/row_line_separator" />
            <com.avast.android.generic.ui.widget.SelectorRow android:id="@id/feedback_type" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <include layout="@layout/row_line_separator" />
            <TextView android:id="@id/feedback_description_label" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/content_marginVertical" android:text="@string/l_feedback_description" style="?rowTitleStyle" />
            <TextView android:textStyle="bold" android:textColor="@color/text_problem" android:id="@id/feedback_description_error_message" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_marginHorizontal" android:layout_marginTop="@dimen/content_marginVerticalSmall" android:layout_marginRight="@dimen/content_marginHorizontal" android:layout_marginBottom="@dimen/content_marginVerticalSmall" android:text="@string/msg_feedback_description_missing" />
            <EditText android:gravity="top|left|center" android:id="@id/feedback_description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_marginHorizontal" android:layout_marginTop="@dimen/content_marginVerticalSmall" android:layout_marginRight="@dimen/content_marginHorizontal" android:layout_marginBottom="@dimen/content_marginVertical" android:hint="@string/l_feedback_description_hint" android:minLines="3" android:inputType="textCapSentences|textMultiLine|textShortMessage" />
            <include layout="@layout/row_line_separator" />
            <com.avast.android.generic.ui.widget.CheckBoxRow android:id="@id/feedback_checkbox_ciq" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <include layout="@layout/row_line_separator" />
            <com.avast.android.generic.ui.widget.CheckBoxRow android:id="@id/feedback_checkbox_log" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <include layout="@layout/row_line_separator" />
            <com.avast.android.generic.ui.widget.CheckBoxRow android:id="@id/feedback_checkbox_dumpsys" android:layout_width="fill_parent" android:layout_height="wrap_content" avast:rowTitle="@string/l_feedback_send_dumpsys" avast:rowSubTitle="@string/l_feedback_send_dumpsys_desc" avast:rowDAO="none" />
        </LinearLayout>
        <LinearLayout style="@style/ButtonLayout">
            <Button android:id="@id/feedback_button_cancel" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="4.0dip" android:text="@string/l_feedback_button_cancel" android:layout_weight="1.0" style="@style/Button.Gray" />
            <Button android:id="@id/feedback_button_send" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="4.0dip" android:text="@string/l_feedback_button_send" android:layout_weight="1.0" style="@style/Button.Green" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>