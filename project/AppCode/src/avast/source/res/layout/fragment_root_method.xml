        </LinearLayout>
        <LinearLayout style="@style/ButtonLayout">
            <Button android:id="@id/b_back" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="4.0dip" android:text="@string/l_back" android:layout_weight="1.0" style="@style/Button.Gray" />
            <Button android:id="@id/b_continue" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="4.0dip" android:text="@string/l_install" android:layout_weight="1.0" style="@style/Button.Green" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>