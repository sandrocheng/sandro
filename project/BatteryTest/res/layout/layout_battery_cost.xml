<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/title_bg">
    <LinearLayout android:layout_gravity="center" android:layout_width="wrap_content" android:background="@drawable/title_bg"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/cost_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp" android:paddingLeft="10dp"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:text="@string/battery_cost_hardware_title"
        android:background="@drawable/mode_tab_icon1_pressed"
        android:clickable="true" />
        
     <TextView
        android:id="@+id/cost_hardware_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp" android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/battery_cost_title"
        android:background="@drawable/mode_tab_icon2_normal"
        android:clickable="true" />
        </LinearLayout>
        
       <ImageView
        android:id="@+id/update_btn"
        android:clickable="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="2dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_refresh_power_usage" 
        android:layout_marginTop="1dip"/>
        
       <ImageView
        android:id="@+id/hardware_update_btn"
        android:clickable="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="2dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_refresh_power_usage" 
        android:layout_marginTop="1dip"
        android:visibility="gone"/>
        
     </FrameLayout>
     <ListView
            android:id="@+id/battery_cost_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical" >
     </ListView>
</LinearLayout>