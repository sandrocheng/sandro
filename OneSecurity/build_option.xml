<?xml version="1.0" encoding="UTF-8"?>

<!-- 
	文件名： build_option.xml
	创建日期： 2010/4/8
	描述：
		项目构建的参数设置，所有路径等变化的属性都在这里进行设置，
		如项目路径、工具路径等。
-->

<project name="option" default="">	

	
	<!-- 项目可配置属性定义 -->
	<property environment="env" />
	
	<!-- 自动打包使用的build_option 开始-->
	
	<!--  环境变量 --> 
	<property name="ws" value="${env.WORKSPACE}" /> 
	<!--  取服务器Woskspace路径 --> 
	<property name="isCI" value="false" /> 
	<!-- 布尔值，true表示服务器环境，false表示开发环境--> 
	<available file="${ws}/build.xml" property="isCI" /> 
	<!--  初始化isCI值 --> 
	<!--  项目属性，请根据对应的描述进行更新 --> 
	<!--  编译使用的Android SDK版本设置，这里的4是指使用1.6版本的SDK--> 
	<property name="android_version" value="8" /> 
	<!--  混淆使用的Proguard版本，可选版本有：4.4、4.5.1、4.6--> 
	<property name="proguard_version" value="4.6" /> 
	
	<!--  文件编码设置 --> 
	<property name="encoding" value="UTF-8" /> 
	<!--  默认执行混淆 --> 
	<property name="obfuscated" value="true" /> 
	
	<!-- 本地打包的文件名前缀，如：qqbrowser2.2_android 
	  --> 
	<condition property="file_name" value="OneSecurity1.0_android" else="${env.BaseLine}">
	 <not>
	  <istrue value="${isCI}" /> 
	  </not>
	  </condition>
	 <!-- 本地工作区路径，如：D:\workspace\qqbrowser_android 
	  --> 
	 <condition property="project_path" value="D:\BL_OneSecurity_2.0.0(Android)" else="${env.WORKSPACE}">
	 <not>
	  <istrue value="${isCI}" /> 
	  </not>
	  </condition>
	 <!-- AndroidSDK 安装路径，如果本地不同，请按实际情况修改 
	  --> 
	 <condition property="android_home" value="D:\program\android-sdk" else="C:\android-sdk-windows">
	 <not>
	  <istrue value="${isCI}" /> 
	  </not>
	  </condition>
	 <!-- ProguardHone路径，请按实际情况修改 
	  --> 
	 <condition property="proguard_home" value="D:\proguard4.6" else="C:\Progra~1\proguard${proguard_version}">
	 <not>
	  <istrue value="${isCI}" /> 
	  </not>
	  </condition>
	 <!-- 本地jarsigner的路径，如果已加入环境变量，则不用修改，否则需要指定具体目录 
	  --> 
	 <condition property="signer" value="jarsigner" else="jarsigner">
	 <not>
	  <istrue value="${isCI}" /> 
	  </not>
	  </condition>
	<!-- 自动打包使用的build_option 结束-->
	
