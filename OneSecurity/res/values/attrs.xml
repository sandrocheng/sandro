<?xml version="1.0" encoding="utf-8"?>
<resources>
   	<declare-styleable name="ButtonView">
		<attr name="bvbuttontype" format="integer" />
		<attr name="bvbuttontext" format="string" />
		<attr name="bvtextsize" format="integer" />
	</declare-styleable>
	
	<declare-styleable name="CustomArrowButton">
		<attr name="buttontype">
		    <flag name="white" value="0x1" />
		</attr>
		<attr name="buttontext" format="string" />
		<attr name="buttonHintText" format="string" />
		<attr name="textsize" format="integer" />
		<attr name="enabled" format="boolean" />
	</declare-styleable> 
	
	<declare-styleable name="SettingItem">
   	    <attr name="itemType" format="integer" />
   	</declare-styleable>
	
	<declare-styleable name="CustomIconButton">
		<attr name="buttonType">
		    <flag name="icon_left" value="0x1" />
		    <flag name="icon_right" value="0x2" />.
		    <flag name="icon_left_vip" value="0x3" />
		    <flag name="icon_right_vip" value="0x4" />
		</attr>
		<attr name="buttonText" format="string" />
		<attr name="buttonTextColor" format="color" />
		<attr name="buttonTextColorPress" format="color" />
		<attr name="buttonIcon" format="reference" />
		<attr name="buttonIconPress" format="reference" />
		<attr name="buttonIconDisabled" format="reference" />
		<attr name="buttonEnabled" format="boolean" />
		<attr name="buttonTextSize" format="float" />
		<attr name="buttonTextPadding" format="float" />
	</declare-styleable>
	
	<declare-styleable name="ShortcutIcon">
	    <attr name="icon_text1" format="string" />
	    <attr name="icon_text2" format="string" />
		<attr name="icon_src_off" format="reference" />
		<attr name="icon_src_on" format="reference" />
		<attr name="icon_src_press" format="reference" />
	</declare-styleable> 
</resources>
