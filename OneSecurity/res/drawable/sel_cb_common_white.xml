<?xml version="1.0" encoding="utf-8"?>
<!-- checkbox：未选中为灰色，选中为蓝色(对号) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/cb_common_white_choice" android:state_enabled="true" android:state_selected="true"/>
    <item android:drawable="@drawable/cb_common_white_choice" android:state_checked="true" android:state_enabled="true"/>
    <item android:drawable="@drawable/cb_common_white_notchoice" android:state_checked="false" android:state_enabled="true"/>
    <item android:drawable="@drawable/cb_common_white_disable_notchoice" android:state_checked="false" android:state_enabled="false"/>
    <item android:drawable="@drawable/cb_common_white_disable_choice" android:state_checked="true" android:state_enabled="false"/>
    <item android:drawable="@drawable/cb_common_white_notchoice"/>

</selector>