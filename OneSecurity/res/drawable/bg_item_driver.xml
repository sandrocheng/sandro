<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- 没有焦点时的背景图片android:color="@drawable/test"-->

	<item android:state_window_focused="false"
		android:drawable="@drawable/bg_item_selected" android:color="#000000" />

	<!-- 非触摸模式下获得焦点并单击时的背景图片-->

	<item android:state_focused="true" android:state_pressed="true"

		android:drawable="@drawable/bg_item_selected" />

	<!-- 触摸模式下单击时的背景图片-->

	<item android:state_focused="false" android:state_pressed="true"

		android:drawable="@drawable/bg_item_selected" />

	<!--获得焦点时的图片背景-->

	<item android:state_focused="true" android:drawable="@drawable/bg_item_selected" />

	

</selector>