<?xml version="1.0" encoding="utf-8"?>
<!-- 私密图片一览 SecurePicGridActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tencent.onesecurity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_common_base"
    android:orientation="vertical" >

    <!-- TitleBar -->

    <include
        android:id="@+id/secure_line_titlebar"
        android:layout_alignParentTop="true"
        layout="@layout/layout_sub_title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/secure_line_titlebar"
        android:orientation="vertical" >

        <!-- 中间GridView  start -->

        <LinearLayout
            android:id="@+id/lay_gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <GridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/gv_secure_pics"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12.66dp"
                    android:horizontalSpacing="1dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbarThumbVertical="@drawable/bg_common_list_scroll_bar"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_secure_no_photo_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    style="@style/secret_no_photos_guid_style"
                    android:src="@drawable/bg_vault_photos_no_photo"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 中间GridView  end -->


        <!-- 底部button  start -->

        <LinearLayout
            android:id="@+id/line_add_photos"
            android:layout_width="fill_parent"
            android:layout_height="93.33dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical" >

            <!-- 皇冠button 阴影部分18.67dp -->

            <com.tencent.onesecurity.ui.customview.widget.CustomIconButton
                android:id="@+id/btn_add_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:visibility="visible"
                app:buttonIcon="@drawable/btn_vault_photos_import_vip_nor"
                app:buttonIconPress="@drawable/btn_vault_photos_import_vip_press"
                app:buttonText="@string/safebox_notes_and_photos_add"
                app:buttonTextPadding="1"
                app:buttonType="icon_left_vip" />

            <RelativeLayout
                android:id="@+id/line_del_and_rec"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal|bottom"
                android:visibility="gone" >

                <com.tencent.onesecurity.ui.customview.widget.CustomIconButton
                    android:id="@+id/btn_del_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="23.33dp"
                    app:buttonIcon="@drawable/btn_vault_photos_delete_nor"
                    app:buttonIconDisabled="@drawable/btn_vault_photos_delete_disabled"
                    app:buttonIconPress="@drawable/btn_vault_photos_delete_press"
                    app:buttonText="@string/image_view_delete"
                    app:buttonTextPadding="4"
                    app:buttonType="icon_left" />

                <com.tencent.onesecurity.ui.customview.widget.CustomIconButton
                    android:id="@+id/btn_recypt_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="23.33dp"
                    app:buttonIcon="@drawable/btn_vault_photos_restore_nor"
                    app:buttonIconDisabled="@drawable/btn_vault_photos_restore_disabled"
                    app:buttonIconPress="@drawable/btn_vault_photos_restore_press"
                    app:buttonText="@string/image_view_restore"
                    app:buttonTextPadding="4"
                    app:buttonType="icon_right" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 底部button  end -->
    </LinearLayout>

</RelativeLayout>