<?xml version="1.0" encoding="utf-8"?>
<!-- 火箭发射动画布局文件 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/whirlpool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@anim/anim_whirlpool" >
    </ImageView>
    
    <ImageView
        android:id="@+id/whirlpoolStat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone"
        android:background="@drawable/desktop_bg_tips_3" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/smoke_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/desktop_smoke_t" >
        </ImageView>

        <ImageView
            android:id="@+id/smoke_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/desktop_smoke_m" >
        </ImageView>
    </LinearLayout>

</FrameLayout>