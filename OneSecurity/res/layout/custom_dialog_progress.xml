<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:layout_marginLeft="17.33dip"
    android:layout_marginRight="17.33dip"
    android:background="@drawable/bg_vault_pop_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minWidth="800dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_progress_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:background="@drawable/img_loading_wait" />

        <TextView
            android:id="@+id/tv_dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/common_loading_tip"
            android:textColor="#ff414141"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:text="("
            android:textColor="#ff414141"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_progress_num_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ffff8e29"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_progress_num_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="/"
            android:textColor="#ff414141"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_progress_num_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ff414141"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=")"
            android:textColor="#ff414141"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/img_pop_line_v" />

    <LinearLayout
        android:id="@+id/btn_dialog_cancel"
        android:layout_width="65.33dp"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
        	android:id="@+id/iv_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_btn_vault_photos_pop_left" />
    </LinearLayout>

</LinearLayout>