    <FrameLayout
        android:id="@+id/safebox_title_fl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/safebox_titlebar_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/safebox_titlebar_left_text"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#f7fbfb"
            android:textSize="13sp"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/safebox_title_fl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp" >

        <ImageView
            android:id="@+id/safebox_titlebar_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/safebox_titlebar_right_text"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#f7fbfb"
            android:textSize="13sp"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/safebox_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/safebox_title_fl_right"
        android:layout_toRightOf="@id/safebox_title_fl_left"
        android:gravity="center"
        android:singleLine="true" />

