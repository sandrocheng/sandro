<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_common_base"
    android:orientation="vertical" >

    <include layout="@layout/layout_sub_title_bar" />

    <LinearLayout
        android:id="@+id/lay_scan_cleaning_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_find_virus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/sel_icon_virus_report_state_find_virus"
                android:clickable="true"
                android:contentDescription="@string/application_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_scan_viruses_notice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff6459"
                    android:textSize="@dimen/textsize_16sp" />

                <TextView
                    android:id="@+id/text_scan_mobile_notice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vvcl_your_mobile_is_at_severe_risk"
                    android:textColor="@color/white_1_fafafa"
                    android:visibility="gone" />
                <!-- style="@style/descriptive_text_style" -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/vvcl_scanned_item_s"
                        android:textColor="@color/white_1_fafafa" />

                    <TextView
                        android:id="@+id/text_scan_items_num_virus"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/color_full_scan_text"
                        android:textSize="@dimen/textsize_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/vvcl_scanned_time"
                        android:textColor="@color/white_1_fafafa" />

                    <TextView
                        android:id="@+id/text_scan_time_virus"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/color_full_scan_text"
                        android:textSize="@dimen/textsize_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_has_virus_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/vvcl_remove_viruses_and_YYY_safe"
            android:textColor="@color/white_1_fafafa"
            android:textSize="@dimen/textsize_12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_scan_cleaned_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_no_virus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/sel_icon_virus_report_state_nor"
                android:clickable="true"
                android:contentDescription="@string/application_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_scan_no_virus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vvcl_clean_viruses_successfully"
                    android:textColor="#70b81a"
                    android:textSize="@dimen/textsize_16sp" />

                <TextView
                    android:id="@+id/text_scan_no_virus2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vvcl_your_mobile_is_safe_now"
                    android:textColor="@color/white_1_fafafa" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/vvcl_scanned_item_s"
                        android:textColor="@color/white_1_fafafa" />

                    <TextView
                        android:id="@+id/text_scan_items_num_ok"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/color_full_scan_text"
                        android:textSize="@dimen/textsize_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/vvcl_scanned_time"
                        android:textColor="@color/white_1_fafafa" />

                    <TextView
                        android:id="@+id/text_scan_time_ok"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/color_full_scan_text"
                        android:textSize="@dimen/textsize_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_clear_virus_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/vvcl_suggest_to_do_YYY_safe"
            android:textColor="@color/white_1_fafafa"
            android:textSize="@dimen/textsize_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
	<!--     android:fadingEdge="none" 增加上下阴影效果 -->
        <ListView
            android:id="@+id/list_scan_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="13.33dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_common_list"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:focusable="true"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarThumbVertical="@drawable/bg_common_list_scroll_bar"
            android:scrollbars="vertical" />
        <!-- 病毒库提示更新 -->

        <LinearLayout
            android:id="@+id/ll_virus_lib_expired"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_result_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sel_virus_result_update_press"
                android:layout_marginRight="5dp"
                android:duplicateParentState="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:duplicateParentState="true"
                android:text="@string/vvcl_virus_engine_expired"
                android:textColor="@color/sel_btn_virus_result_update"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>