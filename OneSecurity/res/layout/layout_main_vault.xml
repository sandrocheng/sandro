<?xml version="1.0" encoding="utf-8"?>
<com.tencent.onesecurity.ui.customview.layout.VaultLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 锁区域 -->

    <RelativeLayout
        style="@style/main_circle_father_view_size"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_valut_main_lockframe"
            style="@style/main_circle_view_size"
            android:layout_centerInParent="true"
            android:gravity="center" >

            <!-- 外层底部 -->

            <LinearLayout
                android:id="@+id/ll_vault_main_underlayer"
                style="@style/main_circle_view_size"
                android:layout_gravity="center"
                android:addStatesFromChildren="true"
                android:background="@drawable/sel_vault_underlayer_background"
                android:contentDescription="@string/main_title_right"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/ll_touck"
                    style="@style/main_circle_click_size"
                    android:layout_gravity="center" />
            </LinearLayout>
            <!-- 外圈 -->

            <com.tencent.onesecurity.ui.customview.layout.vault.CircleView
                android:id="@+id/iv_valut_main_outside"
                style="@style/main_circle_view_size"
                android:layout_gravity="center"
                android:contentDescription="@string/main_title_right"
                android:scaleType="matrix"
                android:src="@drawable/img_vault_main_circle_outside" />
            <!-- 中圈 -->

            <com.tencent.onesecurity.ui.customview.layout.vault.CircleView
                android:id="@+id/iv_valut_main_middle"
                style="@style/main_circle_view_size"
                android:layout_gravity="center"
                android:contentDescription="@string/main_title_right"
                android:scaleType="matrix"
                android:src="@drawable/img_vault_main_circle_middle" />
            <!-- 内圈 -->

            <com.tencent.onesecurity.ui.customview.layout.vault.CircleView
                android:id="@+id/iv_valut_main_inside"
                style="@style/main_circle_view_size"
                android:layout_gravity="center"
                android:contentDescription="@string/main_title_right"
                android:scaleType="matrix"
                android:src="@drawable/img_vault_main_circle_inside" />

            <TextView
                android:id="@+id/tv_valut_main_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/privacy_view_text_size"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_valut_main_withoutsdcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/application_name"
                android:src="@drawable/icon_without_sdcard_default"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_valut_main_light"
            style="@style/main_valut_view_light_size"
            android:layout_below="@id/fl_valut_main_lockframe"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_vault_main_circle_light"
            android:contentDescription="@string/main_title_right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_valut_main_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        style="@style/main_head_padding_top">
		<!--  头部提示文字 -->
        <TextView
            android:id="@+id/tv_vault_main_tips"
            style="@style/text_main_common_info_text"
                 android:textColor="@color/white_1_fafafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vault_main_tips"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
    </LinearLayout>
    <!-- 功能图标区 -->

    <RelativeLayout
        android:id="@+id/rl_vault_main_iconframe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_vault_main_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/main_title_right"
            android:src="@drawable/img_vault_main_notes_default" android:layout_marginBottom="8dp"/>
        <!-- style="@style/main_valut_view_btn_size" 去掉 by gordon -->

        <LinearLayout
            android:id="@+id/ll_vault_main_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_vault_main_note"
            android:layout_alignTop="@id/iv_vault_main_note"
            android:layout_toRightOf="@id/iv_vault_main_note"
            android:gravity="center_vertical" android:layout_marginLeft="-6dp">

            <TextView
                android:id="@+id/tv_vault_main_note"
                style="@style/text_main_common_function_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vault_main_note" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_vault_main_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/main_title_right"
            android:src="@drawable/img_vault_main_photos_not_vip_default" android:layout_marginBottom="8dp"/>
        <!-- style="@style/main_valut_view_btn_size" 去掉by gordon -->

        <LinearLayout
            android:id="@+id/ll_vault_main_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_vault_main_photo"
            android:layout_alignTop="@id/iv_vault_main_photo"
            android:layout_toLeftOf="@id/iv_vault_main_photo"
            android:gravity="center_vertical" android:layout_marginRight="-6dp">

            <TextView
                android:id="@+id/tv_vault_main_photo"
                style="@style/text_main_common_function_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vault_main_photo" />
        </LinearLayout>
    </RelativeLayout>

</com.tencent.onesecurity.ui.customview.layout.VaultLayout>